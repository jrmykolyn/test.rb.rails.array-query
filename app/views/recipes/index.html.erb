<h1>Recipes#Index</h1>

<form action="/" method="GET">
	<label for="search_field">Search</label>
	<input id="search_field" type="text" name="query">
	<input type="submit">
</form>

<% if @recipes && !@recipes.empty? %>
    <ul>
    <% @recipes.each do | r | %>
        <li style="margin-bottom: 30px;">
		<h2 style="margin-bottom: 0;"><%= r.name %></h2>
		<% r.ingredients.each do | ingredient | %>
			<span><%= ingredient.name %></span>
		<% end %>
        </li>
    <% end %>
    </ul>
<% else %>
    <h2>Whoops! Looks like nothing matched your search terms.</h2>
<% end %>
